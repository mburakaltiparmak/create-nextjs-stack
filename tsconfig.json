{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "bin/**/*.js",
    "tests/**/*.ts",
    "vitest.config.mts"
  ],
  "exclude": [
    "node_modules",
    "templates"
  ]
}
